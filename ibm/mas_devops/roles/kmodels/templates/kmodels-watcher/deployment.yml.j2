---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: km-watcher
  namespace: mas-{{ mas_instance_id }}-aibroker
  labels:
    app: km-watcher
    component: watcher
spec:
  replicas: 1
  selector:
    matchLabels:
      app: km-watcher
  template:
    metadata:
      labels:
        app: km-watcher
        component: watcher
    spec:
      serviceAccountName: km-watcher
      imagePullSecrets:
        # - name: regcred
        - name: {{ pullSecretName }}
      containers:
        - name: watcher
          # image: 'icr.io/mas-accelerators/kmodels/watcher:1.0.0'
          image: {{ registry }}/{{ watcher }}
          imagePullPolicy: Always
          ports:
            - name: http
              containerPort: 3000
          resources:
            requests:
              cpu: 0.5
              memory: 1Gi
              ephemeral-storage: "1Gi"
            limits:
              cpu: 2
              memory: 4Gi 
              ephemeral-storage: "2Gi"
          livenessProbe:
            httpGet:
              path: /version
              port: 3000
              scheme: HTTP
            initialDelaySeconds: 15
            periodSeconds: 500
          readinessProbe:
            httpGet:
              path: /version
              port: 3000
              scheme: HTTP
            initialDelaySeconds: 5
            periodSeconds: 500
          envFrom:
            - configMapRef:
                name: km-watcher
          # env:
          #   - name: TENANT
          #     valueFrom:
          #       fieldRef:
          #         fieldPath: metadata.namespace
