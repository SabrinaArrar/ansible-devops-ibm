---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: km-watcher
  namespace: mas-{{ mas_instance_id }}-aibroker
  labels:
    app: km-watcher
    component: watcher
spec:
  replicas: 1
  selector:
    matchLabels:
      app: km-watcher
  template:
    metadata:
      labels:
        app: km-watcher
        component: watcher
    spec:
      serviceAccountName: km-watcher
      imagePullSecrets:
        # - name: regcred
        - name: {{ pullSecretName }}
      containers:
        - name: watcher
          # image: 'icr.io/mas-accelerators/kmodels/watcher:1.0.0'
          image: {{ registry }}/{{ watcher }}
          imagePullPolicy: Always
          ports:
            - name: http
              containerPort: 3000
          envFrom:
            - configMapRef:
                name: km-watcher
