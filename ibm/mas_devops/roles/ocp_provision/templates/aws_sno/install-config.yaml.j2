apiVersion: v1
baseDomain: {{ base_domain }}
compute:
- name: worker
  replicas: 0
controlPlane:
  name: master
  platform:
    aws:
      type: m5.4xlarge
  replicas: 1
metadata:
  name: {{ cluster_name }}
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: 10.0.0.0/16
  networkType: OpenShiftSDN 
  serviceNetwork:
  - 172.30.0.0/16
platform:
  aws:
    region: {{ aws_region }}
publish: External
pullSecret: '{{ pull_secret | regex_replace('\'', '"') }}'