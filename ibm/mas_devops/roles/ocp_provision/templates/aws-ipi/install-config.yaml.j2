apiVersion: v1
baseDomain: {{ base_domain }}
compute:
- name: worker
  platform:
    aws:
      type: {{ aws_compute_instance_type }}
  replicas: {{ compute_node_count }}
controlPlane:
  name: master
  platform:
    aws:
      type: {{ aws_controlplane_instance_type }}
  replicas: {{ controlplane_node_count }}
metadata:
  name: {{ cluster_name }}
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: 10.0.0.0/16
  networkType: OpenShiftSDN 
  serviceNetwork:
  - 172.30.0.0/16
platform:
  aws:
    region: {{ aws_region }}
publish: External
pullSecret: '{{ pull_secret | regex_replace('\'', '"') }}'