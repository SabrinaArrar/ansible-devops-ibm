---
apiVersion: sls.ibm.com/v1
kind: LicenseService
metadata:
  name: {{ sls_instance_name }}
{% if custom_labels is defined and custom_labels.items() %}
  labels:
{% for key, value in custom_labels.items() %}
    "{{ key }}": "{{ value }}"
{% endfor %}
{% endif %}
spec:
  domain: {{ sls_domain }}
{% if ibm_sls_licenseservice_pod_templates.podTemplates is defined %}
  podTemplates: {{ ibm_sls_licenseservice_pod_templates.podTemplates }}
{% endif %}
  settings:
    auth:
      enforce: {{ sls_auth_enforce }}
    compliance:
      enforce: {{ sls_compliance_enforce }}
    registry: {{ sls_icr_cp }}
    registration:
      open: {{ sls_registration_open }}
  license:
    accept: true
  mongo:
    nodes: {{ mongodb.hosts }}
    configDb: {{ sls_mongo_configdb }}
    secretName: ibm-sls-mongo-credentials
    retryWrites: {{ sls_mongo_retrywrites }}
    certificates: 
      {{ mongodb.certificates | indent(6) }}
