apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: "{{ ibm_mongo_admin_credentials_secret_name }}"
data:
  mongo_user_name: "{{ mongo_instance_info.resource.adminuser | b64encode }}"
  mongo_password: "{{ mongo_admpass | b64encode }}"
  cert_ca: "{{ mongo_instance_info.resource.connectionstrings[0].certbase64 }}"