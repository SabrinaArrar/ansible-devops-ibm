apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: grafana-operator
  namespace: "{{ grafana_v5_namespace }}"
  labels:
    operators.coreos.com/grafana-operator.{{ grafana_v5_namespace }}: ''
spec:
  channel: v5
  installPlanApproval: Automatic
  name: grafana-operator
  source: "{{ grafana_source }}"
  sourceNamespace: "{{ grafana_source_namespace }}"
  config:
    env:
      - name: "WATCH_NAMESPACE"
        value: ""
      - name: "DASHBOARD_NAMESPACES_ALL"
        value: "true"
