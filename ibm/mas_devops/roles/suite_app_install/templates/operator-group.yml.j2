apiVersion: operators.coreos.com/v1
kind: OperatorGroup
metadata:
  name: {{ mas_app_namespace }}-operator-group
  namespace: {{ mas_app_namespace }}
{% if custom_labels is defined and custom_labels.items() %}
  labels:
{% for key, value in custom_labels.items() %}
    "{{ key }}": "{{ value }}"
{% endfor %}
{% endif %}
spec:
  targetNamespaces:
    - {{ mas_app_namespace }}
