apiVersion: spssmodeler.cpd.ibm.com/v1
kind: Spss
metadata:
  name: "{{ cpd_service_info[cpd_service_name].cr_name }}"
  namespace: "{{ cpd_instance_namespace }}"
spec:
  ignoreForMaintenance: false
  license:
    accept: true
    license: Standard
  scaleConfig: "{{ cpd_service_scale_config }}"

  version: "{{ cpd_components_meta.spss.cr_version }}"
  ccs_operand_version: "{{ cpd_components_meta.ccs.cr_version }}"
  datarefinery_operand_version: "{{ cpd_components_meta.datarefinery.cr_version }}"
  wsrt_operand_version: "{{ cpd_components_meta.ws_runtimes.cr_version }}"